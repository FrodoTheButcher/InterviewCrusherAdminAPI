<Window x:Class="InterviewCrusher.Console.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterviewCrusher.Console"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar with navigation buttons -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightGray" Height="50" Grid.Row="0">
            <Button Content="Generate Video" Width="150" Height="40" Click="NavigateToVideo"/>
            <Button Content="Generate Quiz" Width="150" Height="40" Click="NavigateToQuiz"/>
            <Button Content="Generate Algorithm" Width="150" Height="40" Click="NavigateToAlgorithm"/>
            <Button Content="Generate Chapter" Width="150" Height="40" Click="NavigateToChapter"/>
            <Button Content="Generate Template" Width="150" Height="40" Click="NavigateToTemplate"/>
        </StackPanel>

        <!-- Main content area where pages will load -->
        <Frame Name="MainContentFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
