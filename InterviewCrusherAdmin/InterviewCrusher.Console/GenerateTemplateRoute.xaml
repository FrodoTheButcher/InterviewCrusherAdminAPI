<Page x:Class="InterviewCrusher.Console.GenerateTemplateRoute"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterviewCrusher.Console"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GenerateTemplate">

    <Grid>
        <!-- Navigation Bar -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Background="LightGray" Height="50">
            <Button Content="Generate Video" Width="150" Height="40" Click="NavigateToVideo"/>
            <Button Content="Generate Quiz" Width="150" Height="40" Click="NavigateToQuiz"/>
            <Button Content="Generate Algorithm" Width="150" Height="40" Click="NavigateToAlgorithm"/>
            <Button Content="Generate Chapter" Width="150" Height="40" Click="NavigateToChapter"/>
            <Button Content="Generate Template" Width="150" Height="40" Click="NavigateToTemplate"/>
        </StackPanel>
        <Frame x:Name="MainContentFrame" Grid.Row="1"  Margin="0 50 0 0" NavigationUIVisibility="Hidden"/>
    </Grid>
    <!-- Main Content Area -->
</Page>
