<Page x:Class="InterviewCrusher.Console.TemplateDropdownWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InterviewCrusher.Console"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TemplateDropdownWindow">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select a Template:" FontSize="16" Margin="0,0,0,10"/>
            <ComboBox x:Name="TemplateDropdown" Width="200" DisplayMemberPath="Title" SelectedValuePath="Id"/>
            <TextBlock x:Name="SelectedTemplateText" FontSize="14" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
